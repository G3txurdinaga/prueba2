<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ik_2dm3.g3_team.Main2Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="142dp"
            android:layout_weight="0.6" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="122dp"
            android:orientation="horizontal">



            <ImageView
                android:id="@+id/escarabilleraView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:layout_gravity="left"/>


            <TextView
                android:id="@+id/tvBocadillos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bocatfin"
                android:paddingBottom="10dp"
                android:paddingStart="25dp"
                android:paddingEnd="20dp"
                android:paddingTop="15dp"
                android:scrollbars="vertical"
                android:textAlignment="center"
                tools:text="@string/frase3"
                android:layout_weight="0.75"
                android:layout_gravity="left"/>


            <android.support.design.widget.FloatingActionButton
                android:id="@+id/btnTexto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                app:backgroundTint="@android:color/holo_blue_light"
                app:srcCompat="@drawable/arrowright"
                android:layout_weight="0.05" />

        </LinearLayout>



    </LinearLayout>

</android.support.constraint.ConstraintLayout>
